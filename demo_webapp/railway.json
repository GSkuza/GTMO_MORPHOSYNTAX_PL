{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r demo_webapp/api/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd demo_webapp/api && uvicorn main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
